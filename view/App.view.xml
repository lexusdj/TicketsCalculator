<mvc:View
	controllerName="Calculator.controller.App"
	displayBlock="true"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt"
	xmlns="sap.m">
	<App id="app">
		<Page title="Ticket Calculator">
            <l:BlockLayout background="Light">
                <l:BlockLayoutRow>
                    <l:BlockLayoutCell>
                    <Label text="Importe" labelFor="inputNumber1"/>
                    <Input
                        id="Importe"
                        type="String"
                        description="€"
                        class="sapUiSmallMarginBottom"
                        placeholder="Enter value"
                        maxLength="3"/>          
                    <Label text="Valor Ticket" labelFor="inputNumber1"/>
                    <Input
                        id="Ticket1"
                        type="String"
                        description="€"
                        maxLength="1"
                        class="sapUiSmallMarginBottom"
                        placeholder="Enter a ticket value" />

                    <Label text="Valor Ticket" labelFor="inputNumber2"/>
                    <Input
                        id="Ticket2"
                        type="String"
                         maxLength="1"
                        description="€"
                        class="sapUiSmallMarginBottom"
                        placeholder="Enter a ticket value" />            
                    <Button
                        id="Calculate"
                        type="Emphasized"
                        icon="sap-icon://simulate"
                        text="Calculate €"                        
                        press="onCalculate"
                        class="sapUiSmallMargin"/>
                    <l:VerticalLayout class="sapUiContentPadding" width="100%"> 
                    <Text id="Textticket" text="" class="sapUiTinyMarginTop"/>
                    </l:VerticalLayout>
                    </l:BlockLayoutCell>
				</l:BlockLayoutRow>
		    </l:BlockLayout>
			
		</Page>
	</App>
</mvc:View>
